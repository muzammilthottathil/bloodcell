<%- include('partials/header.ejs') -%>
<body>
    <div>
        <form action="/admin/addhospital" onsubmit="return checkPhoneNo()" method="POST">
            <div>
                <label for="hospitalName">Hospital Name : </label>
                <input type="text" name="hospitalName" id="" required>
            </div>
            <div>
                <label for="address">Street Address: </label>
                <input type="text" name="address" id="" required>
            </div>
            <div>
                <label for="landmark">Landmark : </label>
                <input type="text" name="landmark" id="" required>
            </div>
            <div>
                <label for="contactNo">Contact No : </label>
                <input type="text" name="contactNo" id="contactNo" required>
            </div>

            <div>
                <button type="submit">Add Hospital</button>
            </div>
        </form>
    </div>

    <script lang="javascript">
        function checkPhoneNo() {
            let phoneNo = document.getElementById("contactNo").value;
            for(let i = 0; i <= phoneNo.length; i++) {
                let currChar = phoneNo.charAt(i);
                if(isNaN(currChar) && currChar != ' ') {
                    alert('Enter valid phone no.!!!');
                    return false;
                }
            }
            return true;
        }
    </script>
</body>