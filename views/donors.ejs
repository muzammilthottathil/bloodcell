<%- include('partials/header.ejs') -%>
<body>
    <%- include('partials/navbar.ejs') -%>
    <table width="100%">
        <tr>
            <th>Name</th>
            <th>Year Of Admission</th>
            <th>Department</th>
            <th>Contact No.</th>
            <th>Blood Group</th>
            <th>Last Donation</th>
        </tr>
        <% donors.forEach(donor => { %>
            <tr>
                <td><%= donor.name %></td>
                <td><%= donor.year_of_admission %></td>
                <td><%= donor.dept %></td>
                <td><%= donor.phone_no %></td>
                <td><%= donor.blood_group %></td>
                <% if(donor.last_donation.toJSON().slice(0,10) !== '2000-01-01') { %>
                    <td><%= donor.last_donation.toJSON().slice(0,10).replace(/-/g,'-') %></td>
                <% } %>
            </tr>  
        <% }) %>
    </table>
</body>
