<%- include('partials/header.ejs') -%>
<body style = "padding : 100px;">
    <div class = "card text-center bg-light " style = "margin:auto;padding-top: 30px;padding-bottom: 80px;font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;max-width: 400px;align-self: center;">
        <div>
            <h5>User Login</h5>
        </div>
        <div>
            <br>
        </div>
        <div>
            <!-- Change begins here -->
            <% if(message != ''){ %>
            <div class = "alert alert-warning alert-dismissible" role="alert" >
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <strong>Warning! &nbsp;&nbsp;</strong><%= message %>
            </div>
            <% } %>
            <!-- Change ends here-->
            <br>
            <form action="/login" method="POST">
                <div class = "form-group">
                    <input type="text" name="username" id="username" required placeholder="Username">
                </div>
                <div class = "form-group" style = "padding-top:10px;">
                    <input type="password" name="password" id="password" required placeholder="Password" >
                </div>
                <div style = "padding-top:20px;">
                    <button class = "btn btn-primary" type="submit" >Login</button>
                </div>
            </form>
        </div>
    </div>
</body>